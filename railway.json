{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "composer install --no-interaction && npm ci --force && npm run build"
  },
  "deploy": {
    "startCommand": "php artisan serve --host=0.0.0.0 --port=9000",
    "healthcheckPath": "/",
    "restartPolicyType": "always"
  }
}
